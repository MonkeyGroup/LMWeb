            <tr>
                <td>
                    <input name="submit" style="margin-left: 30%;" class="btn" type="button" value="数据库备份" onclick="return restore() && false;" />
                    <input name="submit" style="margin-left: 30%;" class="btn" type="button" value="数据库恢复" onclick="return restore() && false;" />
                </td>
            </tr>
        </table>
    </div>

</div>







