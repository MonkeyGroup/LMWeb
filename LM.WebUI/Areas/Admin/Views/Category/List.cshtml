@using LM.Model.Model
@using LM.Utility
@using LM.WebUI.Areas.Admin.Models
@{
    Layout = "~/Areas/Admin/Views/Shared/_Main.cshtml";
    ViewBag.Title = "List";

    var models = ViewBag.Categories as List<CategoryModel>;
    var pageInfo = (ViewBag.PageInfo as PageInfo) ?? new PageInfo();

    var index = 1;
    var target = ViewBag.Target ?? "";
    var keys = ViewBag.Keys ?? "";
}
@Html.RenderScript("/Areas/Admin/Content/js/laypage/laypage.js")

<script>
    $(function () {
        /* 分页使用异步 */
        laypage({
            cont: document.getElementById('pageDiv1'), //容器。值支持id名、原生dom对象，jquery对象,
            pages: '@pageInfo.PageCount', //总页数
            curr: '@pageInfo.PageIndex', // 当前页
            groups: 3, //连续显示分页数
            skin: '#0072C6',
            jump: function (e, first) {
                // 第一次的事件必须要判断
                if (!first) {
                    var target = $('#target').val();
                    var keys = $('#keys').val();
                    window.location.href = '/Admin/Category/List?&pindex=' + e.curr + (type !== '' ? '&target=' + target : '') + (keys !== '' ? '&keys=' + keys : '');
                }
            }
        });
    });
</script>

<script>
    function search() {
        var target = $('#target').val();
        var keys = $('#keys').val();
        window.location.href = '/Admin/Category/List?target=' + target + '&keys=' + keys;
    }

    function delArticle(id) {
        if (!confirm('确定删除吗？'))
            return;
        var target = $('#target').val();
        var keys = $('#keys').val();
        window.location.href = '/Admin/Category/Delete?ids=' + id + '&target=' + target + '&keys=' + keys;
    }

    function batchDelete(form) {
        if (!confirm('确定删除吗？'))
            return;
        var ids = [];
        for (var i = 0; i < form.elements.length; i++) {
            var e = form.elements[i];
            if (e.name !== "chkall" && e.type !== "button" && e.disabled !== true && e.checked) {
                e.value != null && ids.push(Number(e.value));
            }
        }
        if (ids.length === 0) {
            alert('请勾选删除项！');
        } else {
            var target = $('#target').val();
            var keys = $('#keys').val();
            window.location.href = '/Admin/Category/Delete?ids=' + ids + '&target=' + target + '&keys=' + keys;
        }
    }

</script>

<div id="dcMain">
    <!-- 当前位置 -->
    <div id="urHere">
        后台管理中心<b>></b><strong>分类列表</strong>
    </div>

    <div class="mainBox" style="height: auto !important; height: 550px; min-height: 550px;">
        <h3>
            <a href="/Admin/Category/Category" class="actionBtn add">添加分类</a>分类列表
        </h3>
        <div class="filter">
            <form method="post">
                <select id="target" name="target">
                    <option value=""> 未分类</option>
                    <option value="产品分类" @(target.Equals("产品分类") ? "selected" : "")> 产品分类</option>
                    <option value="成员企业分类" @(target.Equals("成员企业分类") ? "selected" : "")> 成员企业分类</option>
                </select>
                <input id="keys" name="keys" type="text" class="inpMain" value="@keys" size="20" />
                <input name="submit" class="btnGray" type="button" value="筛选" onclick="return search() && false;" />
            </form>
        </div>
        <div id="list">
            <form name="action">
                <table width="100%" border="0" cellpadding="8" cellspacing="0" class="tableBasic">
                    @if (models != null && models.Count > 0)
                    {
                        <tr>
                            <th width="22" align="center">
                                <input name='chkall' type='checkbox' id='chkall' onclick='selectcheckbox(this.form)' value='check'>
                            </th>
                            <th width="40" align="center">编号</th>
                            <th align="center">分类对象</th>
                            <th width="100" align="center">分类名称</th>
                            <th width="150" align="center">分类描述</th>
                            <th width="80" align="center">优先级</th>
                            <th width="80" align="center">编辑日期</th>
                            <th width="80" align="center">操作</th>
                        </tr>

                        foreach (var model in models)
                        {
                            <tr>
                                <td align="center">
                                    <input type="checkbox" name="checkbox" value="@(model.Id)" />
                                </td>
                                <td align="center">@((pageInfo.PageIndex - 1) * pageInfo.PageSize + index++)</td>
                                <td align="center">
                                    @(model.Target)
                                </td>
                                <td align="center">
                                    <a href="/Admin/Article/List?type=@(model.Id)">@(model.Name)</a>
                                </td>
                                <td title="@(model.Description)">
                                    @(!string.IsNullOrEmpty(model.Description) && model.Description.Length > 30 ? model.Description.Substring(0, 27) + "..." : model.Description)
                                </td>
                                <td align="center">
                                    @(model.Index)
                                </td>
                                <td align="center">
                                    @(model.SaveAt.ToString("yyyy-MM-dd HH:mm:ss"))
                                </td>
                                <td align="center">
                                    <a href="/Admin/Category/Category?id=@(model.Id)">编辑</a> | <a href="#" onclick="return delArticle('@(model.Id)') && false;">删除</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <th width="22" align="center">
                                <span style="text-align: center;">无数据！</span>
                            </th>
                        </tr>
                    }
                </table>

                <div class="action" style="@(models != null && models.Count > 0 ? "" : "display:none;")">
                    <button name="" class="btn" type="button" value="删除" onclick="return batchDelete(this.form) && false;">删除</button>
                    <!--分页-->
                    <div class="pageDiv" id="pageDiv1" style="float: right;"></div>
                </div>
            </form>
        </div>
        <div class="clear"></div>
    </div>
</div>

<script type="text/javascript">
    onload = function () {
        document.forms['action'].reset();
    }
</script>



