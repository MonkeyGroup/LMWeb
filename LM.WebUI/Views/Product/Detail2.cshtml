@using LM.Model.Model
@using LM.Utility
@{
    ViewBag.Title = "产品详情";
    var info = ViewBag.Product as ProductModel;
    var comps = ViewBag.Companies as List<CompanyModel> ?? new List<CompanyModel>();
}

@Html.RenderCss("/Content/css/product_show1.css")
@Html.RenderScript("/Content/js/jquery.kxbdmarquee.js")

@section partialScriptCss{
    <script>
        $(function () {
            $('.about_leftb table').css('width', '100%');
        });
    </script>
}

<div class="bg">
    <div class="about_main">
        <div class="about_left">
            <div style="width: 640px; height: auto; margin: 0px auto 30px;">
                <div class="mycontent1">
                    <style>
                        .mytd {
                            width: 90%;
                            border-bottom: #086DFD 1px dashed;
                        }
                    </style>
                    <table style="margin: 30px 30px 10px 30px; border-spacing: 15px 10px; font-size: 14px;">
                        <tr>
                            <td rowspan="5">
                                <div id="proimg" style="margin: 0px; width: 150px; height: 150px; float: left; display: inline">
                                    <img width="100%" height="100%" src="@(string.IsNullOrEmpty(info.ImgSrc) ? "/Content/images/zanwu.jpg" : info.ImgSrc)" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="mytd">
                                &nbsp;&nbsp;名称：@info.Name
                            </td>
                        </tr>
                        <tr>
                            <td class="mytd">
                                &nbsp;&nbsp;状态：@info.State
                            </td>
                        </tr>
                        <tr>
                            <td class="mytd">
                                &nbsp;&nbsp;应用：@info.Application
                            </td>
                        </tr>
                        <tr>
                            <td class="mytd">
                                &nbsp;&nbsp;生产企业：@info.Company
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="mycontent">
                    <style>
                        .mycontent table {
                            border-collapse: collapse;
                            border-spacing: 0;
                            border-left: 1px solid #888;
                            border-top: 1px solid #888;
                            background: rgb(240, 249, 254);
                        }

                        .mycontent th, .mycontent td {
                            border-right: 1px solid #888;
                            border-bottom: 1px solid #888;
                            padding: 5px 5px;
                        }
                    </style>

                    @Html.Raw(info.Description)
                </div>
            </div>
        </div>
        <div class="about_right" style="background: url(/Content/images/syqy.png) 0 0 no-repeat;">
            <div>
                <div class="about_right_tit">
                    <span style="text-align: left; font-family: 微软简楷体; font-weight: bold; color: #22A9E0; font-size: 18px; margin: 20px 15px;">
                        联盟理事会成员企业
                    </span>
                </div>
                <div class="about_right_main" id="element_id">
                    <style>
                        #element_id ul li {
                            font-family: "微软雅黑";
                            float: left;
                            width: 222px;
                            height: 24px;
                            line-height: 24px;
                            overflow: hidden;
                            font-size: 12px;
                            background: url(/Content/images/news_icon.jpg) left no-repeat;
                            padding-left: 15px;
                            text-align: left;
                        }
                    </style>
                    <ul style="height: 1584px; width: 80%; margin: 10%;">
                        @foreach (var c in comps)
                        {
                            <li title="@c.Name"><a href="/Company/Detail?id=@c.Id">@(c.Name.Length > 13 ? c.Name.Substring(0, 11) + "..." : c.Name)</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#element_id").kxbdMarquee({
            direction: "up",
            isEqual: false,
            loop: 0,
            scrollAmount: 1,
            scrollDelay: 50
        });
    });
</script>


